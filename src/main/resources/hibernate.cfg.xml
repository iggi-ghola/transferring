<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url">jdbc:h2:mem:transferring;DB_CLOSE_DELAY=-1;DATABASE_TO_UPPER=false;
		</property>
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="com.kozhekin.model.Account"/>
		<mapping class="com.kozhekin.model.Transaction"/>
		<mapping class="com.kozhekin.model.User"/>
	</session-factory>
</hibernate-configuration>
